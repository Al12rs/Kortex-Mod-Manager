<?xml version="1.0" encoding="utf-8"?>
<Instance GameID="Sacred2" SortOrder="31">
	<Name Short="Sacred 2">Sacred 2: Fallen Angel</Name>
	
	<Variables>
		<!--Required-->
		<Entry ID="ActualGameDir" Source="Registry" Type="FSPath" SaveAsOverride="1">
			<Branch>32</Branch>
			<Root>HKEY_LOCAL_MACHINE</Root>
			<Path>SOFTWARE\Ascaron Entertainment\Sacred 2</Path>
			<Name>InstallPath</Name>
			<Type>REG_SZ</Type>
		</Entry>
		<Entry ID="ActualConfigDir">$SHF(SAVED_GAMES)\Ascaron Entertainment\Sacred 2</Entry>

		<Entry ID="GameExecutable">$(GameRoot)\System\Sacred2.exe</Entry>
		<Entry ID="VirtualGameExecutable">$(VirtualGameRoot)\System\Sacred2.exe</Entry>
	</Variables>

	<Network>
		<NexusID>Sacred2</NexusID>
		<SteamID>225640</SteamID>
	</Network>

	<Virtualization>
		<MirroredLocations>
			<Entry>
				<Sources>
					<Entry>$(SavesDir)</Entry>
					<!--<Entry>$(ConfigDir)</Entry>-->
				</Sources>
				<Target>$(ActualConfigDir)</Target>
			</Entry>
		</MirroredLocations>
	</Virtualization>

	<ProgramManager>
		<Programs>
			<Entry>
				<Name>$(GameShortName)</Name>
				<Executable>System\Sacred2.exe</Executable>
			</Entry>
		</Programs>
	</ProgramManager>

	<ScreenshotsGallery>
		<Locations>
			<Entry>$SHF(PICTURES)\Ascaron Entertainment\Sacred 2</Entry>
			<Entry>$(ActualGameDir)</Entry>
			<Entry>$(ActualGameDir)\Screenshots</Entry>
			<Entry>$(ConfigDir)</Entry>
			<Entry>$(ConfigDir)\Screenshots</Entry>
			<Entry>$(OverwritesDir)</Entry>
			<Entry>$(OverwritesDir)\Screenshots</Entry>
		</Locations>
	</ScreenshotsGallery>

	<SaveManager SaveFileFormat="Sacred2">
		<Location>$(SavesDir)</Location>
		<FileFilters>
			<Entry Label="$T(SaveManager.Filter.Saves) (*.sacred2save)">*.sacred2save</Entry>
			<Entry Label="$T(SaveManager.Filter.Backups) (*.bak)">*.bak</Entry>
		</FileFilters>
		<PrimaryExtension>sacred2save</PrimaryExtension>
	</SaveManager>
</Instance>
