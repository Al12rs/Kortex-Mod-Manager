<?xml version="1.0" encoding="utf-8"?>
<Instance ID="Sacred2" SortOrder="31">
	<Name Short="Sacred 2">Sacred 2: Fallen Angel</Name>
	
	<Variables>
		<!--Required-->
		<Entry ID="GameRoot" EntryType="Registry" SubType="FolderPath" UseOverride="1">
			<Node>32</Node>
			<Root>HKEY_LOCAL_MACHINE</Root>
			<Path>SOFTWARE\Ascaron Entertainment\Sacred 2</Path>
			<ValueName>InstallPath</ValueName>
			<ValueType>REG_SZ</ValueType>
		</Entry>
		<Entry ID="ConfigRootTarget">$SH(SHF_SAVED_GAMES)\Ascaron Entertainment\Sacred 2</Entry>
		<Entry ID="GameExecutable">$(GameRoot)\System\Sacred2.exe</Entry>
		<Entry ID="VirtualGameExecutable">$(VirtualGameRoot)\System\Sacred2.exe</Entry>
		<Entry ID="NexusID">$(ID)</Entry>
	</Variables>

	<Network>
		<NexusID>Sacred2</NexusID>
		<SteamID>225640</SteamID>
	</Network>

	<LocationsConfig>
	</LocationsConfig>

	<Virtualization>
		<MirroredLocations>
			<Entry>
				<Sources>
					<Entry>$(SavesRootLocal)</Entry>
				</Sources>
				<Target>$(ConfigRootTarget)</Target>
			</Entry>
		</MirroredLocations>
	</Virtualization>

	<ProgramConfig>
		<Main>
			<Entry>
				<Name>$(NameShort)</Name>
				<Icon>System\Sacred2.exe</Icon>
				<Executable>$(VirtualGameExecutable)</Executable>
				<Arguments></Arguments>
			</Entry>
		</Main>
	</ProgramConfig>

	<ScreenshotsGallery>
		<Locations>
			<Entry>$SH(SHF_PICTURES)\Ascaron Entertainment\Sacred 2</Entry>
			<Entry>$(VirtualGameRoot)</Entry>
			<Entry>$(VirtualGameRoot)\Screenshots</Entry>
			<Entry>$(ConfigRootLocal)</Entry>
		</Locations>
	</ScreenshotsGallery>

	<SaveManager SaveFileFormat="Sacred2">
		<RelativeLocation></RelativeLocation>
		<FileFilters>
			<Entry Label="$T(SaveManager.Filter.Saves) (*.sacred2save)">*.sacred2save</Entry>
			<Entry Label="$T(SaveManager.Filter.Backups) (*.bak)">*.bak</Entry>
		</FileFilters>
		<PrimaryExtension>sacred2save</PrimaryExtension>
	</SaveManager>
</Instance>
