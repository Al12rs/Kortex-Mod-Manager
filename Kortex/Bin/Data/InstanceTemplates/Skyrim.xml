<?xml version="1.0" encoding="utf-8"?>
<Instance GameID="Skyrim" SortOrder="13">
	<Name Short="Skyrim">The Elder Scrolls V: Skyrim</Name>

	<Variables>
		<!--Required-->
		<Entry ID="ActualGameDir" Source="Registry" Type="FSPath" SaveAsOverride="1">
			<Branch>32</Branch>
			<Root>HKEY_LOCAL_MACHINE</Root>
			<Path>SOFTWARE\Bethesda Softworks\Skyrim</Path>
			<Name>Installed Path</Name>
			<Type>REG_SZ</Type>
		</Entry>
		<Entry ID="ActualConfigDir">$SHF(DOCUMENTS)\My Games\Skyrim</Entry>
		<Entry ID="ActualSavesDir">$(ActualConfigDir)\Saves</Entry>
		<Entry ID="ScriptExtenderID">SKSE</Entry>
		<Entry ID="xEditID">tes5</Entry>
	</Variables>

	<Network>
		<NetworkManager>
			<NexusID>Skyrim</NexusID>
			<SteamID>72850</SteamID>
		</NetworkManager>
	</Network>

	<Programs>
		<ProgramManager>
			<DefaultPrograms>
				<Entry ShowInMainMenu="1">
					<Name>$(GameShortName)</Name>
					<Executable>TESV.exe</Executable>
				</Entry>
				<Entry ShowInMainMenu="1">
					<Name>$(GameShortName) ($(ScriptExtenderID))</Name>
					<Executable>SKSE_Loader.exe</Executable>
				</Entry>
				<Entry>
					<Name>$(GameShortName) Launcher</Name>
					<Executable>SkyrimLauncher.exe</Executable>
				</Entry>
				<Entry>
					<Name>Creation Kit</Name>
					<Executable>CreationKit.exe</Executable>
					<Arguments></Arguments>
				</Entry>
				<Entry>
					<Name>ENB Injector</Name>
					<Executable>ENBInjector.exe</Executable>
				</Entry>
			</DefaultPrograms>
		</ProgramManager>
	</Programs>

	<GameConfig EnableENB="1">
		<Entry ID="0" Format="INI" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\Skyrim.ini</Entry>
		<Entry ID="1" Format="INI" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\SkyrimPrefs.ini</Entry>
		<Entry ID="1000" Format="INI" TypeDetectionMethod="HungarianNotation">SkyrimEditor.ini</Entry>
		<Entry ID="1001" Format="INI" TypeDetectionMethod="HungarianNotation">SkyrimEditorPrefs.ini</Entry>
	</GameConfig>

	<GameMods>
		<ModManager>
			<MirroredLocations>
				<Entry>
					<Sources>
						<Entry>$(SavesDir)</Entry>
						<Entry>$(ConfigDir)</Entry>
					</Sources>
					<Target>$(ActualConfigDir)</Target>
				</Entry>
				<Entry>
					<Sources>
						<Entry>$(ProfileDir)\Plugins</Entry>
					</Sources>
					<Target>$SHF(APPLICATIONDATA_LOCAL)\Skyrim</Target>
				</Entry>
			</MirroredLocations>
		</ModManager>
		<TagManager>
			<DefaultTags>
				<Entry ID="Animation" NexusID="51"/>
				<Entry ID="Armor" NexusID="51"/>
				<Entry ID="Clothing" NexusID="60"/>
				<Entry ID="Jewelry" NexusID="102"/>
				<Entry ID="Weapons" NexusID="55"/>
				<Entry ID="Gameplay" NexusID="24"/>
				<Entry ID="Immersion" NexusID="78"/>
				<Entry ID="Environment" NexusID="74"/>
				<Entry ID="GuildsFactions" NexusID="25"/>
				<Entry ID="Combat" NexusID="77"/>
				<Entry ID="Crafting" NexusID="100"/>
				<Entry ID="Magic" NexusID="75"/>
				<Entry ID="MagicSpells" NexusID="75"/>
				<Entry ID="MagicGameplay" NexusID="93"/>
				<Entry ID="Alchemy" NexusID="94"/>
				<Entry ID="BooksScrolls" NexusID="98"/>
				<Entry ID="Quests" NexusID="35"/>
				<Entry ID="Buildings" NexusID="95"/>
				<Entry ID="Settlements" NexusID="53"/>
				<Entry ID="Mercantiles" NexusID="69"/>
				<Entry ID="NewLands" NexusID="30"/>
				<Entry ID="Dungeons" NexusID="88"/>
				<Entry ID="AbandonedStructures" NexusID="70"/>
				<Entry ID="PlayerHomes" NexusID="67"/>
				<Entry ID="Landscape" NexusID="58"/>
				<Entry ID="Overhauls" NexusID="79"/>
				<Entry ID="Conversions" NexusID="-1"/>
				<Entry ID="Audio" NexusID="61"/>
				<Entry ID="Interface" NexusID="42"/>
				<Entry ID="NPC" NexusID="33"/>
				<Entry ID="Body" NexusID="26"/>
				<Entry ID="Face" NexusID="26"/>
				<Entry ID="Hair" NexusID="26"/>
				<Entry ID="Races" NexusID="34"/>
				<Entry ID="Followers" NexusID="66"/>
				<Entry ID="Creatures" NexusID="83"/>
				<Entry ID="Mounts" NexusID="101"/>
				<Entry ID="ModelsTextures" NexusID="29"/>
				<Entry ID="Graphics" NexusID="62"/>
				<Entry ID="ENBPresets" NexusID="97"/>
				<Entry ID="Collectables" NexusID="92"/>
				<Entry ID="ItemsObjects" NexusID="85"/>
				<Entry ID="Cheats" NexusID="40"/>
				<Entry ID="Fixes" NexusID="95"/>
				<Entry ID="ScriptExtenderPlugins" NexusID="-1" RequiresScriptExtender="1"/>
				<Entry ID="Utilities" NexusID="39"/>
				<Entry ID="Resources" NexusID="82"/>
				<Entry ID="GameSaves" NexusID="43"/>
				<Entry ID="Misc" NexusID="28"/>
			</DefaultTags>
		</TagManager>
	</GameMods>
	
	<GameData>
		<PluginManager Implementation="Bethesda" PluginImplementation="BethesdaSkyrim">
			<Limit Value="255"/>

			<ActiveList>$(ProfileDir)\Plugins\Plugins.txt</ActiveList>
			<OrderList>$(ProfileDir)\Plugins\LoadOrder.txt</OrderList>

			<ChangeFileModificationDate>0</ChangeFileModificationDate>
			<SortByFileModificationDate>0</SortByFileModificationDate>

			<ActiveListHeader><![CDATA[# Last modified by $(AppName) $(AppVersion) at $(CurrentDateTime).]]></ActiveListHeader>
			<OrderListHeader><![CDATA[# This file is used by $(GameShortName) to keep track of your downloaded content.
# Please do not modify this file.
# Last modified by $(AppName) $(AppVersion) at $(CurrentDateTime).]]></OrderListHeader>

			<SortingTools>
				<Entry ID="LOOT" Name="Load Order Optimization Tool (LOOT)">
					<Command><![CDATA[--game=Skyrim]]></Command>
				</Entry>
			</SortingTools>

			<LootAPI>
				<Branch>v0.13</Branch>
				<Repository>https://github.com/loot/skyrim.git</Repository>
				<FolderName>Skyrim</FolderName>
				<LocalGamePath>$(ProfileDir)\Plugins</LocalGamePath>
			</LootAPI>

			<StandardContent MainID="Skyrim.esm">
				<Entry ID="Skyrim.esm" Name="$(GameShortName)" Logo="Skyrim.png"/>
				<Entry ID="Update.esm" Name="$(GameShortName): Update" Logo="Skyrim.png"/>
				<Entry ID="Dawnguard.esm" Name="$(GameShortName): Dawnguard" Logo="Dawnguard.png"/>
				<Entry ID="HearthFires.esm" Name="$(GameShortName): HearthFires" Logo="HearthFires.png"/>
				<Entry ID="Dragonborn.esm" Name="$(GameShortName): Dragonborn" Logo="Dragonborn.png"/>
				<Entry ID="HighResTexturePack01.esp" Name="$(GameShortName): High Resolution Texture Pack" Logo="HighResTexturePack.png"/>
				<Entry ID="HighResTexturePack02.esp" Name="$(GameShortName): High Resolution Texture Pack" Logo="HighResTexturePack.png"/>
				<Entry ID="HighResTexturePack03.esp" Name="$(GameShortName): High Resolution Texture Pack" Logo="HighResTexturePack.png"/>
			</StandardContent>
		</PluginManager>

		<SaveManager SaveImplementation="BethesdaSkyrim">
			<Location>$(SavesDir)\Saves</Location>
			<FileFilters>
				<Entry Label="$T(SaveManager.Filter.Saves) (*.ess)">*.ess</Entry>
				<Entry Label="$T(SaveManager.Filter.Backups) (*.bak)">*.bak</Entry>
				<Entry Label="$T(SaveManager.Filter.CoSaves) (*.skse)">*.skse</Entry>
			</FileFilters>

			<PrimaryExtension>ess</PrimaryExtension>
			<SecondaryExtension>skse</SecondaryExtension>
		</SaveManager>

		<ScreenshotsGallery>
			<Locations>
				<Entry>$(ActualGameDir)</Entry>
				<Entry>$(ActualGameDir)\Screenshots</Entry>
				<Entry>$(ConfigDir)</Entry>
				<Entry>$(ConfigDir)\Screenshots</Entry>
				<Entry>$(OverwritesDir)</Entry>
				<Entry>$(OverwritesDir)\Screenshots</Entry>
			</Locations>
		</ScreenshotsGallery>
	</GameData>
</Instance>
