<?xml version="1.0" encoding="utf-8"?>
<Instance GameID="Fallout3" SortOrder="21">
	<Name>Fallout 3</Name>

	<Variables>
		<!--Required-->
		<Entry ID="ActualGameDir" Source="Registry" Type="FSPath" SaveAsOverride="1">
			<Branch>32</Branch>
			<Root>HKEY_LOCAL_MACHINE</Root>
			<Path>SOFTWARE\Bethesda Softworks\Fallout3</Path>
			<Name>Installed Path</Name>
			<Type>REG_SZ</Type>
		</Entry>
		<Entry ID="ActualConfigDir">$SH(SHF_DOCUMENTS)\My Games\Fallout3</Entry>
		<Entry ID="ActualSavesDir">$(ActualConfigDir)\Saves</Entry>
		<Entry ID="ScriptExtenderID">FOSE</Entry>
		<Entry ID="xEditID">fo3</Entry>
	</Variables>

	<Network>
		<NexusID>Fallout3</NexusID>
		<SteamID>22370</SteamID>
	</Network>

	<Virtualization>
		<MirroredLocations>
			<Entry>
				<Sources>
					<Entry>$(SavesDir)</Entry>
					<Entry>$(ConfigDir)</Entry>
				</Sources>
				<Target>$(ActualConfigDir)</Target>
			</Entry>
			<Entry>
				<Sources>
					<Entry>$(ProfileDir)\Plugins</Entry>
				</Sources>
				<Target>$SH(SHF_APPLICATIONDATA_LOCAL)\Fallout3</Target>
			</Entry>
		</MirroredLocations>
	</Virtualization>

	<ProgramManager>
		<Programs>
			<Entry>
				<Name>$(GameShortName)</Name>
				<Executable>Fallout3.exe</Executable>
			</Entry>
			<Entry>
				<Name>$(GameShortName) ($(ScriptExtenderID))</Name>
				<Executable>FOSE_Loader.exe</Executable>
			</Entry>
			<Entry>
				<Name>$(GameShortName) Launcher</Name>
				<Executable>FalloutLauncher.exe</Executable>
			</Entry>
			<Entry>
				<Name>Creation Kit</Name>
				<Executable>GECK.exe</Executable>
			</Entry>
			<Entry>
				<Name>ENB Injector</Name>
				<Executable>ENBInjector.exe</Executable>
			</Entry>
		</Programs>
	</ProgramManager>

	<GameConfig EnableENB="1">
		<Entry Format="INI" ID="0" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\Fallout.ini</Entry>
		<Entry Format="INI" ID="1" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\FalloutPrefs.ini</Entry>
		<Entry Format="INI" ID="1000" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\GECKCustom.ini</Entry>
		<Entry Format="INI" ID="1001" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\GECKPrefs.ini</Entry>
	</GameConfig>

	<PluginManager InterfaceName="Bethesda" PluginFileFormat="BethesdaSkyrim">
		<Limit Value="255"/>

		<ActiveList>$(ProfileDir)\Plugins\Plugins.txt</ActiveList>
		<OrderList>$(ProfileDir)\Plugins\LoadOrder.txt</OrderList>

		<ChangeFileModificationDate>1</ChangeFileModificationDate>
		<SortByFileModificationDate>0</SortByFileModificationDate>

		<ActiveListHeader><![CDATA[# Last modified by $(AppName) $(AppVersion) at $(CurrentDateTime).]]></ActiveListHeader>
		<OrderListHeader>
			<![CDATA[# This file is used by $(GameShortName) to keep track of your downloaded content.
# Please do not modify this file.
# Last modified by $(AppName) $(AppVersion) at $(CurrentDateTime).]]>
		</OrderListHeader>

		<SortingTools>
			<Entry ID="LOOT" Name="Load Order Optimization Tool (LOOT)">
				<Command><![CDATA[--game=Fallout3]]></Command>
			</Entry>
		</SortingTools>

		<LOOTAPI>
			<Branch>v0.13</Branch>
			<Repository>https://github.com/loot/fallout3.git</Repository>
			<FolderName>Fallout3</FolderName>
			<LocalGamePath>$(ProfileDir)\Plugins</LocalGamePath>
		</LOOTAPI>

		<StandardContent MainID="Fallout3.esm">
			<Entry ID="Fallout3.esm" Name="$(GameShortName)" Logo="Fallout3.png"/>
			<Entry ID="Anchorage.esm" Name="$(GameShortName): Operation Anchorage" Logo="Anchorage.png"/>
			<Entry ID="ThePitt.esm" Name="$(GameShortName): The Pitt" Logo="ThePitt.png"/>
			<Entry ID="BrokenSteel.esm" Name="$(GameShortName): Broken Steel" Logo="BrokenSteel.png"/>
			<Entry ID="BrokenSteel1.esp" Name="$(GameShortName): Broken Steel" Logo="BrokenSteel.png"/>
			<Entry ID="BrokenSteel2.esp" Name="$(GameShortName): Broken Steel" Logo="BrokenSteel.png"/>
			<Entry ID="PointLookout.esm" Name="$(GameShortName): Point Lookout" Logo="PointLookout.png"/>
			<Entry ID="Zeta.esm" Name="$(GameShortName): Mothership Zeta" Logo="Zeta.png"/>
		</StandardContent>
	</PluginManager>

	<ScreenshotsGallery>
		<Locations>
			<Entry>$(ActualGameDir)</Entry>
			<Entry>$(ActualGameDir)\Screenshots</Entry>
			<Entry>$(ConfigDir)</Entry>
			<Entry>$(ConfigDir)\Screenshots</Entry>
			<Entry>$(OverwritesDir)</Entry>
			<Entry>$(OverwritesDir)\Screenshots</Entry>
		</Locations>
	</ScreenshotsGallery>

	<SaveManager SaveFileFormat="BethesdaFallout3">
		<Location>$(SavesDir)\Saves</Location>
		<FileFilters>
			<Entry Label="$T(SaveManager.Filter.Saves) (*.fos)">*.fos</Entry>
			<Entry Label="$T(SaveManager.Filter.Backups) (*.bak)">*.bak</Entry>
			<Entry Label="$T(SaveManager.Filter.CoSaves) (*.fose)">*.fose</Entry>
		</FileFilters>

		<PrimaryExtension>fos</PrimaryExtension>
		<SecondaryExtension>fose</SecondaryExtension>
	</SaveManager>
</Instance>
