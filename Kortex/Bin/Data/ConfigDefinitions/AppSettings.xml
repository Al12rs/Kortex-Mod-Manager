<?xml version="1.0" encoding="utf-8"?>
<Definition>
	<DataTypes>
		<Item Type="bool">
			<Input As="any"/>
			<Output As="int"/>
		</Item>
		<Item Type="int">
			<Input As="any"/>
			<Output As="int"/>
		</Item>
		<Item Type="float">
			<Input As="any"/>
			<Output As="float" Precision="2"/>
		</Item>
	</DataTypes>

	<Options>
		<SourceFormat Value="XML"/>
	</Options>

	<Groups>
		<Group ID="Global">
			<!-- General -->
			<Item Category="Global/General" Path="Global/Application/Language" Name="Locale" Type="string">
				<Options>
					<EditableBehavior Value="Selectable"/>
				</Options>
				<Samples Source="Function">
					<Function Name="GetAvailableTranslations"/>
				</Samples>
			</Item>
			<Item Category="Global/General" Path="Global/Instances/Location" Name="" Type="string">
				<Action Name="BrowseFolder"/>
			</Item>
		</Group>
		
		<Group ID="Instance">
			<!-- General -->
			<Item Category="Instance/General" Path="Instance/Application/Workspace" Name="" Type="string">
				<Options>
					<EditableBehavior Value="Selectable"/>
				</Options>
				<Samples Source="Function">
					<Function Name="GetStartupWorkspaces"/>
				</Samples>
			</Item>
			
			<!-- Downloads -->
			<Item Category="Instance/Downloads" Path="Instance/Network/DownloadManager/Downloads" Name="Location" Type="string">
				<Action Name="BrowseFolder"/>
			</Item>
			
			<!-- Variables -->
			<Item Category="Instance/Variables" Path="Instance/Variables/Entry" Name="ID=ActualGameDir" Type="string">
				<Action Name="BrowseFolder"/>
			</Item>
		</Group>
	</Groups>
</Definition>
