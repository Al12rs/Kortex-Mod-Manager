<?xml version="1.0" encoding="utf-8"?>
<Definition>
	<DataTypes>
		<Entry Type="bool">
			<Input As="any"/>
			<Output As="bool"/>
		</Entry>
		<Entry Type="int">
			<Input As="any"/>
			<Output As="int"/>
		</Entry>
		<Entry Type="float">
			<Input As="any"/>
			<Output As="float" Precision="4"/>
		</Entry>
	</DataTypes>
	
	<TypeDetection>
		<HungarianNotation>
			<Entry Prefix="i" Type="int"/>
			<Entry Prefix="u" Type="uint"/>
			<Entry Prefix="f" Type="float32"/>
			<Entry Prefix="d" Type="float64"/>
			<Entry Prefix="b" Type="bool"/>
			<Entry Prefix="s" Type="string"/>
			<Entry Prefix="S" Type="string"/>
			<Entry Prefix="r" Type="string"/>
		</HungarianNotation>
	</TypeDetection>

	<Options>
		<Format Value="INI"/>
		<TypeDetection Value="HungarianNotation"/>
	</Options>
	
	<Groups>
		<Group ID="Game">
			<!-- Graphics -->
			<Item Category="Game/Graphics" Path="Display" Name="iPresentInterval" Type="bool"></Item>
			<Item Category="Game/Graphics" Path="Imagespace" Name="bDoRadialBlur" Type="bool"></Item>
			<Item Category="Game/Graphics" Path="General" Name="bDisableAllGore" Type="bool"></Item>
			
			<!-- Interface -->
			<Item Category="Game/Interface" Path="Interface" Name="fMaxSubtitleDistance" Type="float32">
				<Samples Min="0" Max="2500" Step="250"/>
			</Item>

			<!-- Vegetation -->
			<Item Category="Game/Vegetation/Grass" Path="Grass" Name="iMinGrassSize" Type="int32">
				<Samples Min="0" Max="150" Step="10"/>
			</Item>
		</Group>
		
		<Group ID="GamePrefs">
			<!-- Graphics -->
			<Item Category="Game/Graphics" Path="Display" Name="bFull Screen" Type="bool"></Item>
			<Item Category="Game/Graphics" Path="Display" Name="bFXAAEnabled" Type="bool"></Item>

			<Item Category="Game/Graphics" Path="Display" Name="sD3DDevice" Type="string" Editable="0">
				<Samples FillFunction="GetVideoAdapterList"/>
			</Item>
			<Item Category="Game/Graphics" Path="Display" Name="iMultiSample" Type="int32">
				<Samples>
					<Entry Label="$T(ConfigManager.Samples.None)">0</Entry>
					<Entry Label="$T(ConfigManager.Samples.Low)">1</Entry>
					<Entry Label="$T(ConfigManager.Samples.Mid)">2</Entry>
					<Entry Label="$T(ConfigManager.Samples.High)">4</Entry>
					<Entry Label="$T(ConfigManager.Samples.Ultra)">8</Entry>
				</Samples>
			</Item>
		</Group>

		<Group ID="Editor">
			<Item Category="Editor" Path="General" Name="sLanguage" Type="string">
				<Samples SortOrder="Explicit" SortOptions="IgnoreCase">
					<Entry Label="$T(GameConfig.Samples.Language.RUSSIAN)">RUSSIAN</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.ENGLISH)">ENGLISH</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.GERMAN)">GERMAN</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.FRENCH)">FRENCH</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.CZECH)">CZECH</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.ITALIAN)">ITALIAN</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.POLISH)">POLISH</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.SPANISH)">SPANISH</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.CHINESE)">CHINESE</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.DANISH)">DANISH</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.FINNISH)">FINNISH</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.GREEK)">GREEK</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.JAPANESE)">JAPANESE</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.NORWEGIAN)">NORWEGIAN</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.PORTUGUESE)">PORTUGUESE</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.SWEDISH)">SWEDISH</Entry>
					<Entry Label="$T(GameConfig.Samples.Language.TURKISH)">TURKISH</Entry>
				</Samples>
			</Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="bSkipInitializationFlows" Type="bool"></Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="bSkipProgramFlows" Type="bool"></Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="bAllowYesToAll" Type="bool"></Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="bBlockMessageBoxes" Type="bool"></Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="iFileLogging" Type="int32"></Item>

			<Item Category="Editor" Path="SpellCheck" Name="bSpellCheckEnabled" Type="bool"></Item>
		</Group>
		<Group ID="EditorPrefs">
			
		</Group>
	</Groups>
</Definition>
