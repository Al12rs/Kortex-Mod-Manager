<?xml version="1.0" encoding="utf-8"?>
<Definition>
	<DataTypes>
		<Entry Type="bool">
			<Input As="any"/>
			<Output As="bool"/>
		</Entry>
		<Entry Type="int">
			<Input As="any"/>
			<Output As="int"/>
		</Entry>
		<Entry Type="float">
			<Input As="any"/>
			<Output As="float" Precision="4"/>
		</Entry>
	</DataTypes>
	
	<TypeDetection>
		<HungarianNotation>
			<Entry Prefix="i" Type="int"/>
			<Entry Prefix="u" Type="uint"/>
			<Entry Prefix="f" Type="float32"/>
			<Entry Prefix="d" Type="float64"/>
			<Entry Prefix="b" Type="bool"/>
			<Entry Prefix="s" Type="string"/>
			<Entry Prefix="S" Type="string"/>
			<Entry Prefix="r" Type="string"/>
		</HungarianNotation>
	</TypeDetection>

	<Options>
		<SourceFormat Value="INI"/>
		<TypeDetection Value="HungarianNotation"/>
	</Options>
	
	<Groups>
		<Group ID="Game">
			<!-- Graphics -->
			<Item Category="Game/Graphics" Path="Display" Name="iPresentInterval" Type="bool"></Item>
			<Item Category="Game/Graphics" Path="Imagespace" Name="bDoRadialBlur" Type="bool"></Item>
			<Item Category="Game/Graphics" Path="General" Name="bDisableAllGore" Type="bool"></Item>
			
			<!-- Interface -->
			<Item Category="Game/Interface" Path="Interface" Name="fMaxSubtitleDistance" Type="float32">
				<Samples Source="Range" Min="0" Max="2500" Step="250"/>
			</Item>

			<!-- Vegetation -->
			<Item Category="Game/Vegetation/Grass" Path="Grass" Name="iMinGrassSize" Type="int32">
				<Samples Source="Range" Min="0" Max="150" Step="10"/>
			</Item>
		</Group>
		
		<Group ID="GamePrefs">
			<!-- Graphics -->
			<Item Category="Game/Graphics" Path="Display" Name="bFull Screen" Type="bool"></Item>
			<Item Category="Game/Graphics" Path="Display" Name="bFXAAEnabled" Type="bool"></Item>

			<Item Category="Game/Graphics" Path="Display" Name="sD3DDevice" Type="string" Editable="0">
				<Options>
					<Output>
						<Format><![CDATA["%1"]]></Format>
					</Output>
				</Options>
				<Samples Source="Function">
					<Function Name="GetVideoAdapterList">
						<Arg Type="int"></Arg>
					</Function>
				</Samples>
			</Item>
			<Item Category="Game/Graphics" Path="Display" Name="fGamma" Type="float32">
				<Samples Source="Range" Min="0" Max="2" Step="0.25"/>
			</Item>
			<Item Category="Game/Graphics" Path="Display" Name="iMultiSample" Type="int32">
				<Samples Source="ImmediateItems" SortOrder="Explicit" SortOptions="None">
					<Value Label="$T(ConfigManager.Samples.None)">0</Value>
					<Value Label="$T(ConfigManager.Samples.Low)">1</Value>
					<Value Label="$T(ConfigManager.Samples.Mid)">2</Value>
					<Value Label="$T(ConfigManager.Samples.High)">4</Value>
					<Value Label="$T(ConfigManager.Samples.Ultra)">8</Value>
				</Samples>
			</Item>
			<Item Category="Game/Graphics" Path="Display" Name="ScreenResolution" Type="struct">
				<SubItems Separator="Ã—">
					<Item Name="iSize W" Type="int32"/>
					<Item Name="iSize H" Type="int32"/>
				</SubItems>
				<Samples Source="Function">
					<Function Name="GetVideoModesList"/>
				</Samples>
			</Item>
		</Group>

		<Group ID="Editor">
			<Item Category="Editor" Path="General" Name="sLanguage" Type="string">
				<Samples Source="ImmediateItems" SortOrder="Ascending" SortOptions="IgnoreCase">
					<Value Label="Language.RUSSIAN">RUSSIAN</Value>
					<Value Label="Language.ENGLISH">ENGLISH</Value>
					<Value Label="Language.GERMAN">GERMAN</Value>
					<Value Label="Language.FRENCH">FRENCH</Value>
					<Value Label="Language.CZECH">CZECH</Value>
					<Value Label="Language.ITALIAN">ITALIAN</Value>
					<Value Label="Language.POLISH">POLISH</Value>
					<Value Label="Language.SPANISH">SPANISH</Value>
					<Value Label="Language.CHINESE">CHINESE</Value>
					<Value Label="Language.DANISH">DANISH</Value>
					<Value Label="Language.FINNISH">FINNISH</Value>
					<Value Label="Language.GREEK">GREEK</Value>
					<Value Label="Language.JAPANESE">JAPANESE</Value>
					<Value Label="Language.NORWEGIAN">NORWEGIAN</Value>
					<Value Label="Language.PORTUGUESE">PORTUGUESE</Value>
					<Value Label="Language.SWEDISH">SWEDISH</Value>
					<Value Label="Language.TURKISH">TURKISH</Value>
				</Samples>
			</Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="bSkipInitializationFlows" Type="bool"></Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="bSkipProgramFlows" Type="bool"></Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="bAllowYesToAll" Type="bool"></Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="bBlockMessageBoxes" Type="bool"></Item>
			<Item Category="Editor/Messages" Path="MESSAGES" Name="iFileLogging" Type="int32"></Item>

			<Item Category="Editor" Path="SpellCheck" Name="bSpellCheckEnabled" Type="bool"></Item>
		</Group>
		<Group ID="EditorPrefs">
			
		</Group>
	</Groups>
</Definition>
