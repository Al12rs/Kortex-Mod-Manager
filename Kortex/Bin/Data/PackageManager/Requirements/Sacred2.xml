<?xml version="1.0" encoding="utf-8"?>
<Requirements>
	<!-- General -->
	<Entry ID="$(GameID)" Category="$T(PackageManager.ReqCategory.General)">
		<Name>$(GameName)</Name>
		<Object Function="FileExist">System\Sacred2.exe</Object>
		<Version Function="GTEQ">2.65.1.0</Version>
	</Entry>
	<Entry ID="CommunityPatch" Category="$T(PackageManager.ReqCategory.General)">
		<Name>Community Patch</Name>
		<RequiredState>ModActive</RequiredState>
		<Dependencies>
			<Entry>$(GameID)</Entry>
		</Dependencies>
	</Entry>
</Requirements>
