<?xml version="1.0" encoding="utf-8"?>
<Instance GameID="FalloutNV" SortOrder="22">
	<Name Short="Fallout NV">Fallout: New Vegas</Name>

	<Variables>
		<!--Required-->
		<Entry ID="ActualGameDir" Source="Registry" Type="FSPath" SaveAsOverride="1">
			<Branch>32</Branch>
			<Root>HKEY_LOCAL_MACHINE</Root>
			<Path>SOFTWARE\Bethesda Softworks\FalloutNV</Path>
			<Name>Installed Path</Name>
			<Type>REG_SZ</Type>
		</Entry>
		<Entry ID="ActualConfigDir">$SHF(DOCUMENTS)\My Games\FalloutNV</Entry>
		<Entry ID="ActualSavesDir">$(ActualConfigDir)\Saves</Entry>
		<Entry ID="ScriptExtenderID">NVSE</Entry>
		<Entry ID="xEditID">fnv</Entry>

		<!-- INI -->
		<Entry ID="FalloutNVINI">$(ConfigRootLocal)\Fallout.ini</Entry>
		<Entry ID="FalloutNVPrefsINI">$(ConfigRootLocal)\FalloutPrefs.ini</Entry>
		<Entry ID="FalloutNVEditorINI">$(ConfigRootLocal)\GECKCustom.ini</Entry>
		<Entry ID="FalloutNVEditorPrefsINI">$(ConfigRootLocal)\GECKPrefs.ini</Entry>

		<!--Misc-->
		<Entry ID="GameLauncherPath">$(VirtualGameRoot)\$(GameID)Launcher.exe</Entry>
		<Entry ID="GameEditorPath">$(VirtualGameRoot)\GECK.exe</Entry>
		<Entry ID="ScriptExtenderPath">$(VirtualGameRoot)\$(ScriptExtenderID)_Loader.exe</Entry>
		<Entry ID="ENBInjectorPath">$(VirtualGameRoot)\ENB_Injector.exe</Entry>
	</Variables>

	<Network>
		<NetworkManager>
			<NexusID>NewVegas</NexusID>
			<SteamID>22490</SteamID>
		</NetworkManager>
	</Network>

	<Virtualization>
		<MirroredLocations>
			<Entry>
				<Sources>
					<Entry>$(SavesDir)</Entry>
					<Entry>$(ConfigDir)</Entry>
				</Sources>
				<Target>$(ActualConfigDir)</Target>
			</Entry>
			<Entry>
				<Sources>
					<Entry>$(ProfileDir)\Plugins</Entry>
				</Sources>
				<Target>$SHF(APPLICATIONDATA_LOCAL)\FalloutNV</Target>
			</Entry>
		</MirroredLocations>
	</Virtualization>

	<Programs>
		<ProgramManager>
			<DefaultPrograms>
				<Entry ShowInMainMenu="1">
					<Name>$(GameShortName)</Name>
					<Executable>FalloutNV.exe</Executable>
				</Entry>
				<Entry ShowInMainMenu="1">
					<Name>$(GameShortName) ($(ScriptExtenderID))</Name>
					<Executable>NVSE_Loader.exe</Executable>
				</Entry>
				<Entry>
					<Name>$(GameShortName) Launcher</Name>
					<Executable>FalloutNVLauncher.exe</Executable>
				</Entry>
				<Entry>
					<Name>Creation Kit</Name>
					<Executable>GECK.exe</Executable>
				</Entry>
				<Entry>
					<Name>ENB Injector</Name>
					<Executable>ENBInjector.exe</Executable>
				</Entry>
			</DefaultPrograms>
		</ProgramManager>
	</Programs>

	<GameConfig EnableENB="1">
		<Entry Format="INI" ID="0" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\Fallout.ini</Entry>
		<Entry Format="INI" ID="1" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\FalloutPrefs.ini</Entry>
		<Entry Format="INI" ID="1000" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\GECKCustom.ini</Entry>
		<Entry Format="INI" ID="1001" TypeDetectionMethod="HungarianNotation">$(ConfigDir)\GECKPrefs.ini</Entry>
	</GameConfig>

	<GameData>
		<PluginManager InterfaceName="Bethesda" PluginFileFormat="BethesdaSkyrim">
			<Limit Value="255"/>

			<ActiveList>$(ProfileDir)\Plugins\Plugins.txt</ActiveList>
			<OrderList>$(ProfileDir)\Plugins\LoadOrder.txt</OrderList>

			<ChangeFileModificationDate>1</ChangeFileModificationDate>
			<SortByFileModificationDate>0</SortByFileModificationDate>

			<ActiveListHeader><![CDATA[# Last modified by $(AppName) $(AppVersion) at $(CurrentDateTime).]]></ActiveListHeader>
			<OrderListHeader>
				<![CDATA[# This file is used by $(GameShortName) to keep track of your downloaded content.
# Please do not modify this file.
# Last modified by $(AppName) $(AppVersion) at $(CurrentDateTime).]]>
			</OrderListHeader>

			<SortingTools>
				<Entry ID="LOOT" Name="LOOT - Load Order Optimization">
					<Command><![CDATA[--game=FalloutNV]]></Command>
				</Entry>
			</SortingTools>

			<LibLoot>
				<Branch>v0.14</Branch>
				<Repository>https://github.com/loot/falloutnv.git</Repository>
				<FolderName>FalloutNV</FolderName>
				<LocalGamePath>$(ProfileDir)\Plugins</LocalGamePath>
			</LibLoot>

			<StandardContent MainID="FalloutNV.esm">
				<Entry ID="FalloutNV.esm" Name="$(GameShortName)" Logo="FalloutNV.png"/>
				<Entry ID="FalloutNV_lang.esp" Name="$(GameShortName)" Logo="FalloutNV.png"/>
				<Entry ID="OldWorldBlues.esm" Name="$(GameShortName): Old World Blues" Logo="OldWorldBlues.png"/>
				<Entry ID="OldWorldBlues_lang.esp" Name="$(GameShortName): Old World Blues" Logo="OldWorldBlues.png"/>
				<Entry ID="DeadMoney.esm" Name="$(GameShortName): Dead Money" Logo="DeadMoney.png"/>
				<Entry ID="DeadMoney_lang.esp" Name="$(GameShortName): Dead Money" Logo="DeadMoney.png"/>
				<Entry ID="LonesomeRoad.esm" Name="$(GameShortName): Lonesome Road" Logo="LonesomeRoad.png"/>
				<Entry ID="LonesomeRoad_lang.esp" Name="$(GameShortName): Lonesome Road" Logo="LonesomeRoad.png"/>
				<Entry ID="HonestHearts.esm" Name="$(GameShortName): Honest Hearts" Logo="HonestHearts.png"/>
				<Entry ID="HonestHearts_lang.esp" Name="$(GameShortName): Honest Hearts" Logo="HonestHearts.png"/>
				<Entry ID="GunRunnersArsenal.esm" Name="$(GameShortName): Gun Runners Arsenal" Logo="GunRunnersArsenal.png"/>
				<Entry ID="GunRunnersArsenal_lang.esp" Name="$(GameShortName): Gun Runners Arsenal" Logo="GunRunnersArsenal.png"/>
				<Entry ID="ClassicPack.esm" Name="$(GameShortName): Courier's Stash - Classic Pack" Logo="CouriersStash.png"/>
				<Entry ID="ClassicPack_lang.esp" Name="$(GameShortName): Courier's Stash - Classic Pack" Logo="CouriersStash.png"/>
				<Entry ID="MercenaryPack.esm" Name="$(GameShortName): Courier's Stash - Mercenary Pack" Logo="CouriersStash.png"/>
				<Entry ID="MercenaryPack_lang.esp" Name="$(GameShortName): Courier's Stash - Mercenary Pack" Logo="CouriersStash.png"/>
				<Entry ID="CaravanPack.esm" Name="$(GameShortName): Courier's Stash - Caravan Pack" Logo="CouriersStash.png"/>
				<Entry ID="CaravanPack_lang.esp" Name="$(GameShortName): Courier's Stash - Caravan Pack" Logo="CouriersStash.png"/>
				<Entry ID="TribalPack.esm" Name="$(GameShortName): Courier's Stash - Tribal Pack" Logo="CouriersStash.png"/>
				<Entry ID="TribalPack_lang.esp" Name="$(GameShortName): Courier's Stash - Tribal Pack" Logo="CouriersStash.png"/>
			</StandardContent>

		</PluginManager>

		<ScreenshotsGallery>
			<Locations>
				<Entry>$(ActualGameDir)</Entry>
				<Entry>$(ActualGameDir)\Screenshots</Entry>
				<Entry>$(ConfigDir)</Entry>
				<Entry>$(ConfigDir)\Screenshots</Entry>
				<Entry>$(OverwritesDir)</Entry>
				<Entry>$(OverwritesDir)\Screenshots</Entry>
			</Locations>
		</ScreenshotsGallery>

		<SaveManager SaveFileFormat="BethesdaFalloutNV">
			<Location>$(SavesDir)\Saves</Location>
			<FileFilters>
				<Entry Label="$T(SaveManager.Filter.Saves) (*.fos)">*.fos</Entry>
				<Entry Label="$T(SaveManager.Filter.Backups) (*.bak)">*.bak</Entry>
				<Entry Label="$T(SaveManager.Filter.CoSaves) (*.nvse)">*.nvse</Entry>
			</FileFilters>

			<PrimaryExtension>fos</PrimaryExtension>
			<SecondaryExtension>nvse</SecondaryExtension>
		</SaveManager>
	</GameData>

	<Packages>
		<PackageManager>
			<Requirements>
				<!-- General -->
				<Entry ID="FalloutNV" Category="$T(PackageManager.ReqCategory.General)">
					<Name>$(GameName)</Name>
					<Object Function="FileExist">FalloutNV.exe</Object>
					<Version Function="GTEQ">1.4.0.525</Version>
				</Entry>
				<Entry ID="$(ScriptExtenderID)" Category="$T(PackageManager.ReqCategory.General)">
					<Name>$(GameShortName) Script Extender</Name>
					<Object Function="FileExist">NVSE_Loader.exe</Object>
					<Version Function="GTEQ">0.5.1.4</Version>
				</Entry>

				<!-- DLC -->
				<Entry ID="DLC-DeadMoney" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Dead Money</Name>
					<Object Function="PluginActive">DeadMoney.esm</Object>
				</Entry>
				<Entry ID="DLC-HonestHearts" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Honest Hearts</Name>
					<Object Function="PluginActive">HonestHearts.esm</Object>
				</Entry>
				<Entry ID="DLC-OldWorldBlues" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Old World Blues</Name>
					<Object Function="PluginActive">OldWorldBlues.esm</Object>
				</Entry>
				<Entry ID="DLC-LonesomeRoad" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Lonesome Road</Name>
					<Object Function="PluginActive">LonesomeRoad.esm</Object>
				</Entry>
				<Entry ID="DLC-GunRunnersArsenal" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Gun Runners Arsenal</Name>
					<Object Function="PluginActive">GunRunnersArsenal.esm</Object>
				</Entry>
				<Entry ID="DLC-CouriersStash" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Courier's Stash</Name>
					<Dependencies>
						<Entry>DLC-CS-ClassicPack</Entry>
						<Entry>DLC-CS-MercenaryPack</Entry>
						<Entry>DLC-CS-CaravanPack</Entry>
						<Entry>DLC-CS-TribalPack</Entry>
					</Dependencies>
				</Entry>
				<Entry ID="DLC-CS-ClassicPack" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Courier's Stash - Classic Pack</Name>
					<Object Function="PluginActive">ClassicPack.esm</Object>
				</Entry>
				<Entry ID="DLC-CS-MercenaryPack" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Courier's Stash - Mercenary Pack</Name>
					<Object Function="PluginActive">MercenaryPack.esm</Object>
				</Entry>
				<Entry ID="DLC-CS-CaravanPack" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Courier's Stash - Caravan Pack</Name>
					<Object Function="PluginActive">CaravanPack.esm</Object>
				</Entry>
				<Entry ID="DLC-CS-TribalPack" Category="$T(PackageManager.ReqCategory.DLC)">
					<Name>DLC: Courier's Stash - Tribal Pack</Name>
					<Object Function="PluginActive">TribalPack.esm</Object>
				</Entry>

				<!-- Frameworks -->
				<Entry ID="MCM" Category="$T(PackageManager.ReqCategory.Frameworks)">
					<Name>Mod Configuration Menu</Name>
					<Object Function="FileExist">Data\NVSE\Plugins\MCM.dll</Object>
					<Version Function="GTEQ">1.5</Version>
					<Dependencies>
						<Entry>$(ScriptExtenderID)</Entry>
					</Dependencies>
				</Entry>
				<Entry ID="Lutana" Category="$T(PackageManager.ReqCategory.Frameworks)">
					<Name>Lutana NVSE Plugin</Name>
					<Object Function="FileExist">NVSE\Plugins\Lutana_NVSE.dll</Object>
					<Version Function="GTEQ">16.2</Version>
					<Description>Look for JIP LN NVSE Plugin v40.0+</Description>
					<Dependencies>
						<Entry>$(ScriptExtenderID)</Entry>
					</Dependencies>
				</Entry>
				<Entry ID="JIP-LN" Category="$T(PackageManager.ReqCategory.Frameworks)">
					<Name>JIP LN NVSE Plugin</Name>
					<Object Function="FileExist">NVSE\Plugins\JIP_NVSE.dll</Object>
					<Version Function="GTEQ">53.6</Version>
					<Description>As of v40.0, this plugin also includes all the functions from the (now defunct) Lutana NVSE Plugin</Description>
					<Dependencies>
						<Entry>$(ScriptExtenderID)</Entry>
					</Dependencies>
				</Entry>

				<!-- Body replacers -->
				<Entry ID="Type3" Category="$T(PackageManager.ReqCategory.BodyReplacers)">
					<Name>Dimonized TYPE3 Female Body</Name>
					<Object Function="ModActive"/>
				</Entry>
				<Entry ID="T6M" Category="$T(PackageManager.ReqCategory.BodyReplacers)">
					<Name>Type 6 Modification Body</Name>
					<Object Function="ModActive"/>
				</Entry>
				<Entry ID="RM" Category="$T(PackageManager.ReqCategory.BodyReplacers)">
					<Name>Robert Male Body Replacer</Name>
					<Object Function="ModActive"/>
				</Entry>

				<!-- Misc -->
				<Entry ID="Project Nevada" Category="$T(PackageManager.ReqCategory.Misc)">
					<Object Function="ModActive">NVSE\Plugins\PN_NVSE.dll</Object>
					<Version Function="GTEQ">2.5</Version>
					<Dependencies>
						<Entry>$(ScriptExtenderID)</Entry>
						<Entry>MCM</Entry>
					</Dependencies>
				</Entry>
			</Requirements>
		</PackageManager>
	</Packages>
</Instance>
