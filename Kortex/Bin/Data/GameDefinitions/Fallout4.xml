<?xml version="1.0" encoding="utf-8"?>
<Instance GameID="Fallout4" SortOrder="23">
	<Name>Fallout 4</Name>

	<Variables>
		<!--Required-->
		<Entry ID="ActualGameDir" Source="Registry" Type="FSPath" SaveAsOverride="1">
			<Branch>32</Branch>
			<Root>HKEY_LOCAL_MACHINE</Root>
			<Path>SOFTWARE\Bethesda Softworks\Fallout4</Path>
			<Name>Installed Path</Name>
			<Type>REG_SZ</Type>
		</Entry>
		<Entry ID="ActualConfigDir">$SHF(DOCUMENTS)\My Games\Fallout4</Entry>
		<Entry ID="ActualSavesDir">$(ActualConfigDir)\Saves</Entry>
		<Entry ID="ScriptExtenderID">F4SE</Entry>
		<Entry ID="xEditID">fo4</Entry>
	</Variables>

	<Network>
		<NetworkManager>
			<NexusID>Fallout4</NexusID>
			<SteamID>377160</SteamID>
		</NetworkManager>
	</Network>
	
	<Programs>
		<ProgramManager>
			<DefaultPrograms>
				<Entry>
					<Name>$(GameShortName)</Name>
					<Executable>Fallout4.exe</Executable>
				</Entry>
				<Entry>
					<Name>$(GameShortName) ($(ScriptExtenderID))</Name>
					<Executable>F4SE_Loader.exe</Executable>
				</Entry>
				<Entry>
					<Name>$(GameShortName) Launcher</Name>
					<Executable>Fallout4Launcher.exe</Executable>
				</Entry>
				<Entry>
					<Name>Creation Kit</Name>
					<Executable>CreationKit.exe</Executable>
				</Entry>
				<Entry>
					<Name>ENB Injector</Name>
					<Executable>ENBInjector.exe</Executable>
				</Entry>
			</DefaultPrograms>
		</ProgramManager>
	</Programs>

	<GameMods>
		<ModManager>
			<MirroredLocations>
				<Entry>
					<Sources>
						<Entry>$(SavesDir)</Entry>
						<Entry>$(ConfigDir)</Entry>
					</Sources>
					<Target>$(ActualConfigDir)</Target>
				</Entry>
				<Entry>
					<Sources>
						<Entry>$(ProfileDir)\Plugins</Entry>
					</Sources>
					<Target>$SHF(APPLICATIONDATA_LOCAL)\Fallout4</Target>
				</Entry>
			</MirroredLocations>
		</ModManager>
