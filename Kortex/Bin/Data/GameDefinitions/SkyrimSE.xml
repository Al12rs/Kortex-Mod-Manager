			<MirroredLocations>
				<Entry>
					<Sources>
						<Entry>$(SavesDir)</Entry>
						<Entry>$(ConfigDir)</Entry>
					</Sources>
					<Target>$(ActualConfigDir)</Target>
				</Entry>
				<Entry>
					<Sources>
						<Entry>$(ProfileDir)\Plugins</Entry>
					</Sources>
					<Target>$SHF(APPLICATIONDATA_LOCAL)\Skyrim Special Edition</Target>
				</Entry>
			</MirroredLocations>
		</ModManager>
