<?xml version="1.0" encoding="utf-8"?>
<Instance GameID="SkyrimSE" SortOrder="13">
	<Name Short="Skyrim SE">The Elder Scrolls V: Skyrim - Special Edition</Name>
	
	<Variables>
		<!--Required-->
		<Entry ID="ActualGameDir" Source="Registry" Type="FSPath" SaveAsOverride="1">
			<Branch>32</Branch>
			<Root>HKEY_LOCAL_MACHINE</Root>
			<Path>SOFTWARE\Bethesda Softworks\Skyrim Special Edition</Path>
			<Name>Installed Path</Name>
			<Type>REG_SZ</Type>
		</Entry>
		<Entry ID="ActualConfigDir">$SHF(DOCUMENTS)\My Games\Skyrim Special Edition</Entry>
		<Entry ID="ActualSavesDir">$(ActualConfigDir)\Saves</Entry>
		<Entry ID="ScriptExtenderID">SKSE64</Entry>
		<Entry ID="xEditID">sse</Entry>
	</Variables>

	<Network>
		<NetworkManager>
			<NexusID>SkyrimSpecialEdition</NexusID>
			<SteamID>489830</SteamID>
		</NetworkManager>
	</Network>

	<Programs>
		<ProgramManager>
			<DefaultPrograms>
				<Entry ShowInMainMenu="1">
					<Name>$(GameShortName)</Name>
					<Executable>SkyrimSE.exe</Executable>
				</Entry>
				<Entry ShowInMainMenu="1">
					<Name>$(GameShortName) ($(ScriptExtenderID))</Name>
					<Executable>SKSE64_Loader.exe</Executable>
				</Entry>
				<Entry>
					<Name>$(GameShortName) Launcher</Name>
					<Executable>SkyrimSELauncher.exe</Executable>
				</Entry>
				<Entry>
					<Name>Creation Kit</Name>
					<Executable>CreationKit.exe</Executable>
					<Arguments></Arguments>
				</Entry>
				<Entry>
					<Name>ENB Injector</Name>
					<Executable>ENBInjector.exe</Executable>
				</Entry>
			</DefaultPrograms>
		</ProgramManager>
	</Programs>

	<GameMods>
